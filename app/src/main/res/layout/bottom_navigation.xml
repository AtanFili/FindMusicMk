<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <TextView
        android:id="@+id/textview_instrument"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Instrument"
        android:paddingTop="5dp"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="5dp"
        android:drawableTop="@drawable/navigation_instrument_icon_selector"/>
    <TextView
        android:id="@+id/textview_cdshop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Cd Shop"
        android:paddingTop="5dp"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="5dp"
        android:drawableTop="@drawable/navigation_cd_shop_icon_selector"/>

    <TextView
        android:id="@+id/textview_equipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Equipment"
        android:paddingTop="5dp"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="5dp"
        android:drawableTop="@drawable/navigation_equipment_icon_selector"/>



</LinearLayout>