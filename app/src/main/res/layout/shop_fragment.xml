<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopfragmentscrolview"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:padding="5dp"
    android:background="@color/white">
<ImageView
    android:id="@+id/pozadina"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/pozadinasingleshops"/>
<ImageView

    android:id="@+id/shop_iv"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title_shop"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toEndOf="@id/shop_iv"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/shop_iv"
        android:text="Shop"/>
    <TextView
        android:id="@+id/shop_about_tv"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        app:layout_constraintStart_toEndOf="@id/shop_iv"
        app:layout_constraintTop_toBottomOf="@id/title_shop"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="About"
        android:textColor="@android:color/black"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/new_logo"
        app:layout_constraintTop_toBottomOf="@id/shop_about_tv"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>





