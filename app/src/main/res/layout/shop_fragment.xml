<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ImageView
    android:id="@+id/shopscreen"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    android:scaleType="centerCrop"
    android:background="@drawable/shop_screen"
    app:layout_constraintBottom_toTopOf="@id/cityNavigationBottomView"/>


        <TextView
        android:id="@+id/title_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shop"
        android:textStyle="bold"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="50sp"/>
        <ImageView

            android:id="@+id/shop_iv"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toBottomOf="@id/title_shop"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/shop_about_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/shop_iv"
            android:text="@string/shop_about_text"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:padding="30dp"/>


        <com.gsixacademy.android.findmusicmk.views.CustomBottomNavigationShop
            android:id="@+id/cityNavigationBottomView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/shop_about_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


        />




</ScrollView>