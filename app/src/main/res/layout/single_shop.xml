<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/shopscreen"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shop_screen"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cityNavigationBottomView"/>


    <TextView
        android:id="@+id/title_shop"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/shop"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView

        android:id="@+id/shop_iv"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/title_shop" />


    <TextView
        android:id="@+id/shop_about_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="30dp"
        android:text="@string/shop_about_text"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/shop_iv" />


    <com.gsixacademy.android.findmusicmk.views.CustomBottomNavigationShop
        android:id="@+id/cityNavigationBottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>